            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegPersonalActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegHeightActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegGoalActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegGoalWeightActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
